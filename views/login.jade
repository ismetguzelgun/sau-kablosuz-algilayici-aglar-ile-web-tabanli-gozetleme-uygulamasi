doctype html
html(lang='en')
    head
      title Giriş Ekranı
      link(rel='stylesheet' href='/stylesheets/login_reg.css')
      link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    body
    div.container
        div.row
            div.col-sm-6.col-md-4.col-md-offset-4
                h1.text-center.login-title Kablosuz Algılayıcı Ağlar ile Web Tabanlı Gözetleme Uygulaması
                    div.account-wall
                        img(class='profile-img', src='/images/user-512.png')
                        form(class='form-signin', action='/login', method='POST')
                            input(type='text', name='username' class='form-control', placeholder='Eposta',required, autofocus)
                            input(type='password', name='password' class='form-control', placeholder='Parola', required)
                            button(class='btn btn-lg btn-primary btn-block', type='submit') Giriş yap
                            span.clearfix
                    a(href='/signup', class='text-center new-account') Bir hesap oluştur
                    #message
                    if message
                        h1.text-center.error-message #{message}
