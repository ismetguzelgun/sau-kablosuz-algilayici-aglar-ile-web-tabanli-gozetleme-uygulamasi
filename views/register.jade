doctype html
html(lang='en')
 head
  title Kayıt Ekranı
  link(rel='stylesheet' href='/stylesheets/login_reg.css')
  link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
 body
  div.container
    div.row
      div.col-sm-6.col-md-4.col-md-offset-4
        h1.text-center.login-title Kayıt Detayları
          div.signup-wall
                        form(class='form-signin', action='/signup', method='POST')
                            input(type='text', name='username', class='form-control', placeholder='Kullanıcı Adı',required, autofocus)
                            input(type='password', name='password', class='form-control nomargin', placeholder='Parola', required)
                            input(type='email', name='email', class='form-control', placeholder='Eposta',required)
                            input(type='text', name='firstName', class='form-control', placeholder='İsim',required)
                            input(type='text', name='lastName', class='form-control', placeholder='Soyisim',required)
                            button(class='btn btn-lg btn-primary btn-block', type='submit') Kayıt Ol
                            span.clearfix
                    #message
                        if message
                            h1.text-center.error-message #{message}
